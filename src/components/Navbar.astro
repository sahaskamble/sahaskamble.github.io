---
//Astro Icons here...
import { Icon } from 'astro-icon'

const { name } = Astro.props
---

<header class="flex justify-between lg:hidden">
    <div class="hamburger p-5 lg:hidden" id="hamburger">
        <Icon pack="ri" name="equalizer-line" class="w-[30px] cursor-pointer" />
    </div>

    <div class="p-4 lg:hidden">
        <h3 class="text-2xl font-[600]">{name} ⚡️</h3>
    </div>
    <div class="w-10 lg:w-[100%] lg:h-[2rem]"></div>
</header>
