  </main>
  <hr class="lg:w-[70dvw] w-[80dvw] mx-auto lg:ml-[350px] p-4" />
  <Footer name="Sahas kamble" />

  <style>
    .content {
      margin: 2rem 0;
      padding: 0 1rem;
      width: 100%;
    }
    .content > .image {
      border-radius: 10px;
    }
    .project {
      transistion: transform;
    }
    .project:hover {
      transform: scale(1.08);
    }
